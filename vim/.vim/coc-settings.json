//https://github.com/neoclide/coc.nvim/blob/master/doc/coc.txt
{
  "diagnostic.enable": true,
  "diagnostic.errorSign": "▶",
  "diagnostic.hintSign": "▷",
  "diagnostic.infoSign": "▷",
  "diagnostic.warningSign": "▷",
  "languageserver": {
      "golang": {
        "command": "gopls",
        "rootPatterns": ["go.mod"],
        "filetypes": ["go"]
      }
    },
    "go.goplsOptions": {
      "staticcheck": true
    }
}
