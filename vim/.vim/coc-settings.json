//https://github.com/neoclide/coc.nvim/blob/master/doc/coc.txt
{
  "notification.border": true,
  "diagnostic.enable": true,
  "diagnostic.errorSign": "▶",
  "diagnostic.hintSign": "▷",
  "diagnostic.infoSign": "▷",
  "diagnostic.warningSign": "▷",
  "languageserver": {
      "golang": {
        "command": "gopls",
        "rootPatterns": ["go.mod"],
        "filetypes": ["go"]
      },
      "ccls": {
        "command": "clangd",
        "filetypes": ["c", "cc", "cpp", "c++", "hpp"],
        "rootPatterns": [".ccls", "compile_commands.json", ".git/", ".hg/"],
        "initializationOptions": {
        "cache": {
          "directory": ".ccls"
        }
      }
  }

    },
    "go.goplsOptions": {
      "staticcheck": true
    }
}
