# This is Git's per-user configuration file.
[core]
	editor = vim
	pager = less -S 
[user]
	name = Salman Niazi
	email = smkniazi@kth.se
[push]
	default = simple

[alias]
    log1 = log --color --date=short --pretty=format:'%Cred%h%Creset %Cgreen[%ad %Cgreen%cr] %C(bold blue)%<(12,trunc)%aN%Creset %s \n' --abbrev-commit --
    #%<(500,trunc)%s

[color]
	ui = true
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	pager = true
	grep = auto
	decorate = auto
	showbranch = auto
[merge]
#	        tool = mydiff
	        tool = vimdiff

#[mergetool "mydiff"]
#		 #cmd = meld $LOCAL $BASE $REMOTE
#		 cmd = meld $LOCAL $MERGED $REMOTE

[diff]
            tool = vimdiff
            renameLimit = 10000
[branch]
	        autosetuprebase = always
[diff-so-fancy]
	stripLeadingSymbols = false
	markEmptyLines = false
