# This is Git's per-user configuration file.
[core]
	editor = vim
	pager = diff-so-fancy | less --tabs=4 -RFX
[user]
	name = Salman Niazi
	email = smkniazi@kth.se
[push]
	default = simple

[alias]
	        log1 = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
			log2 = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(black)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
				log3 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all

[color]
	ui = true
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	pager = true
	grep = auto
	decorate = auto
	showbranch = auto
[merge]
#	        tool = mydiff
	        tool = vimdiff

#[mergetool "mydiff"]
#		 #cmd = meld $LOCAL $BASE $REMOTE
#		 cmd = meld $LOCAL $MERGED $REMOTE

[diff]
            tool = vimdiff
            renameLimit = 10000
[branch]
	        autosetuprebase = always
[diff-so-fancy]
	stripLeadingSymbols = false
	markEmptyLines = false
