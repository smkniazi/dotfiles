bind generic D !tigdiff.sh %(commit) %(file)
bind generic e !tigview.sh %(commit) %(file)
bind main C !git difftool -d %(commit)

set main-view-id = yes
set main-view-id-width = 10

set main-view-date = custom
set main-view-date-format = "%Y-%m-%d"

set main-view-author-width = 12

set split-view-width = 65%

#vim keybindings
source ~/.tigrc.vim
set diff-view	= line-number:yes,interval=5 text:yes,commit-title-overflow=no
