#!/bin/bash
alias gb="git branch"
alias gd="PAGER='diff-so-fancy | less --tabs=4 -RFX' git diff"
alias gl="PAGER='less -S' git log --color --date=short --pretty=format:'%Cred%h%Creset %Cgreen[%ad %Cgreen%cr] %C(bold blue)%<(12,trunc)%aN%Creset %s %n ' --abbrev-commit --"
alias gs="git status"
alias gp="git pull"

#git commit
gc() {
	if [ "$#" -ne 0 ]; then
		git commit -am "$@" && git push
	else
		joke=""
		#joke="$(wget 'http://api.icndb.com/jokes/random' -qO- | grep -Po '"joke":.*?[^\\]",' |  sed -e 's/\"//g' | sed -e 's/joke: //g' | sed -e 's/\"//g')"

		joke="Auto generated commit msg.  $joke"
		git commit -am "$joke" 
	fi
}

gcp (){
    set +x
	gc "$@"
	git push
}

