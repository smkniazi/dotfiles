mt () {
   export JAVA_HOME="${HOME}/usr/bin/jdk_for_hadoop"
   export PATH="${HOME}/usr/bin/protocol_buffer_all_versions/protoc_for_hadoop/src:$PATH" && \
   if [ -z "$1" ]; then
     echo "No argument supplied"
   fi
   exe_and_display "mvn test -Pndb -Dtest=$1 -Dsurefire.failIfNoSpecifiedTests=false"
}

