#!/bin/bash
#export PS1="\[\e[1;34m\]\u@\h\[\e[0m\] \[\e[1;32m\]\W\[\e[0m\]\[\e[1;31m\]\$(git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/')\[\e[0m\]\[\e[1;34m\]$\[\e[0m\] "

#https://stackoverflow.com/questions/16715103/bash-prompt-with-last-exit-code

PROMPT_COMMAND=__prompt_command # Func to gen PS1 after CMDs

__prompt_command() {
    local EXIT="$?"             # This needs to be first
    PS1=""

    local RCol='\[\e[0m\]'

    local Red='\[\e[1;31m\]'
    local Gre='\[\e[1;32m\]'
    local Yel='\[\e[1;33m\]'
    local Blu='\[\e[1;34m\]'
    local Pur='\[\e[1;35m\]'

    branch=$(git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/')
    if [ $EXIT != 0 ]; then
        PS1+="${Red}\u@\h${RCol} ${Red}\W${RCol}${Red}$branch${RCol} ${Red}[ExitCode: $EXIT] \$${RCol} "      # Add red if exit code non 0
    else
        PS1+="${Blu}\u@\h${RCol} ${Gre}\W${RCol}${Red}$branch${RCol} \$ "      # Add red if exit code non 0
    fi
}
