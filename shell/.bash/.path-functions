#!/bin/bash
create_path_alias(){
	if [ -d "$2" ]; then
		eval "alias $1=\"cd $2\""
	fi
}

create_path_alias  c          ~/code
create_path_alias	 h		      ~/code/hops/hops
create_path_alias	 hm		      ~/code/hops/hops-metadata-dal
create_path_alias	 hmi	      ~/code/hops/hops-metadata-dal-impl-ndb
create_path_alias	 hmis	      ~/code/hops/hops-metadata-dal-impl-ndb/schema
create_path_alias	 hw 	      ~/code/hops/hopsworks-cloud
create_path_alias	 ei 	      ~/code/hops/ec2-init
create_path_alias	 hb		      ~/code/hops/hammer-bench
create_path_alias	 ds		      ~/code/hops/HopsFS-Deployment-Scripts
create_path_alias	 d		      ~/code/dotfiles
create_path_alias	 D		      ~/Downloads
create_path_alias  r          ~/code/hops/rondb
create_path_alias  r2         ~/code/hops/rondb2
create_path_alias  rest       ~/code/hops/rondb/storage/ndb/rest-server
create_path_alias  rest2      ~/code/hops/rondb/storage/ndb/rest-server2/server
create_path_alias  hmnt       ~/code/hops/hopsfs-go/hopsfs-go-mount
create_path_alias  libhdfs    ~/code/hops/hops/hadoop-hdfs-project/hadoop-hdfs/src/main/native/libhdfs-golang
