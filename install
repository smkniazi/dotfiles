#!/bin/bash
#expects a dir location where the backup files are stored

BACKUP_DIR=$1
if [ -z "$BACKUP_DIR" ]; then
	date=`date +'%B-%d-Time-%H-%M'`
	BACKUP_DIR=~
	BACKUP_DIR="$BACKUP_DIR/dotfiles-$date.bak"
	mkdir -p $BACKUP_DIR
	echo "Usage ./install [backup-dir]"
	echo "No backup dir specified. "
	echo "Backup Dir is: $BACKUP_DIR" 
fi

source ./dircolors/install $BACKUP_DIR
source ./tmux/install $BACKUP_DIR
source ./vim/install $BACKUP_DIR
source ./fonts/install $BACKUP_DIR
source ./gtk-3.0/install $BACKUP_DIR
source ./ranger/install $BACKUP_DIR
source ./gitconfig/install $BACKUP_DIR
source ./myscripts/install $BACKUP_DIR
source ./bash-env/install $BACKUP_DIR
source ./latexmk/install $BACKUP_DIR
source ./freemind/install $BACKUP_DIR


